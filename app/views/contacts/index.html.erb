<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>UTC</th>
      <th>Band</th>
      <th>Mode</th>
      <th>Callsign</th>
      <th>Classification</th>
      <th>Section</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= format_time(contact.created_at) %></td>
        <td><%= contact.band %></td>
        <td><%= contact.mode %></td>
        <td><%= contact.callsign %></td>
        <td><%= contact.classification %></td>
        <td><%= contact.section %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

